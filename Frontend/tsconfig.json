{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",            // ✅ Use the correct JSX transform
    "types": ["react", "react-dom"],  // ✅ Add React types here
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/types/declarations.d.ts"
  ]
}
